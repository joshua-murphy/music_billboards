<h1 class="title">New Artist</h1>
<% if params[:billboard_id] %>
  <% @billboard = Billboard.find(params[:billboard_id]) %>
  redirect_to new_billboard_artist_path
  <%= render "form" %>
<% else %>

  <div class="ui two item menu">
    <%= link_to "Home", billboards_path, class: "item" %>
    <%= link_to "Cancel", artists_path, class: "item" %>
  </div>

  <%= render "form" %>
<% end %>